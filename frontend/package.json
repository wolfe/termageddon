{
  "name": "frontend",
  "version": "0.0.0",
  "scripts": {
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "watch": "ng build --watch --configuration development",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "lint": "ng lint",
    "lint:fix": "ng lint --fix",
    "format": "prettier --write \"src/**/*.{ts,html,scss,css,json}\" \"../**/*.md\" --parser markdown",
    "format:check": "prettier --check \"src/**/*.{ts,html,scss,css,json}\" \"../**/*.md\" --parser markdown"
  },
  "private": true,
  "dependencies": {
    "@angular/animations": "^21.0.8",
    "@angular/cdk": "^21.1.1",
    "@angular/common": "^21.0.8",
    "@angular/compiler": "^21.0.8",
    "@angular/core": "^21.0.8",
    "@angular/forms": "^21.0.8",
    "@angular/platform-browser": "^21.0.8",
    "@angular/router": "^21.0.8",
    "@okta/okta-auth-js": "^7.14.1",
    "diff-match-patch": "^1.0.5",
    "ngx-quill": "^30.0.1",
    "quill": "^2.0.3",
    "rxjs": "~7.8.1",
    "tslib": "^2.3.0",
    "zone.js": "~0.16.0"
  },
  "devDependencies": {
    "@analogjs/vite-plugin-angular": "^2.2.3",
    "@angular-devkit/build-angular": "^21.0.5",
    "@angular-eslint/builder": "^21.1.0",
    "@angular-eslint/eslint-plugin": "^21.1.0",
    "@angular-eslint/eslint-plugin-template": "^21.1.0",
    "@angular-eslint/template-parser": "^21.1.0",
    "@angular/cli": "^21.0.5",
    "@angular/compiler-cli": "^21.0.8",
    "@angular/platform-browser-dynamic": "^21.0.8",
    "@types/diff-match-patch": "^1.0.36",
    "@typescript-eslint/eslint-plugin": "^8.52.0",
    "@typescript-eslint/parser": "^8.52.0",
    "@vitest/coverage-v8": "^4.0.16",
    "@vitest/ui": "^4.0.16",
    "eslint": "^9.39.2",
    "happy-dom": "^20.1.0",
    "jsdom": "^27.4.0",
    "knip": "^5.82.0",
    "prettier": "^3.7.4",
    "reflect-metadata": "^0.2.2",
    "tailwindcss": "^3.4.19",
    "typescript": "~5.9.3",
    "vitest": "^4.0.16"
  },
  "overrides": {
    "@babel/runtime": ">=7.26.10"
  }
}
