#!/bin/bash

# Termageddon Test Runner
# Usage: ./run-tests.sh [options]
# Options:
#   -f, --frontend    Run only frontend unit tests
#   -b, --backend     Run only backend tests
#   -d, --dead-code   Run only dead code detection
#   -h, --help        Show this help message
#   (no args)         Run all tests and dead code detection

# Colors for output
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
BLUE='\033[0;34m'
NC='\033[0m' # No Color

# Global variables for absolute paths
SCRIPT_DIR=""
PROJECT_ROOT=""
FRONTEND_DIR=""
BACKEND_DIR=""

# Function to print colored output
print_status() {
    echo -e "${BLUE}[INFO]${NC} $1"
}

print_success() {
    echo -e "${GREEN}[SUCCESS]${NC} $1"
}

print_warning() {
    echo -e "${YELLOW}[WARNING]${NC} $1"
}

print_error() {
    echo -e "${RED}[ERROR]${NC} $1"
}

# Function to check if a command exists
command_exists() {
    command -v "$1" >/dev/null 2>&1
}

# Function to setup absolute paths
setup_paths() {
    # Get the directory where this script is located
    SCRIPT_DIR="$(cd "$(dirname "${BASH_SOURCE[0]}")" && pwd)"
    PROJECT_ROOT="$(dirname "$SCRIPT_DIR")"
    FRONTEND_DIR="$PROJECT_ROOT/frontend"
    BACKEND_DIR="$PROJECT_ROOT/backend"

    print_status "Script directory: $SCRIPT_DIR"
    print_status "Project root: $PROJECT_ROOT"
    print_status "Frontend directory: $FRONTEND_DIR"
    print_status "Backend directory: $BACKEND_DIR"

    # Verify directories exist
    if [ ! -d "$FRONTEND_DIR" ]; then
        print_error "Frontend directory not found at: $FRONTEND_DIR"
        exit 1
    fi

    if [ ! -d "$BACKEND_DIR" ]; then
        print_error "Backend directory not found at: $BACKEND_DIR"
        exit 1
    fi
}

# Function to run frontend tests
run_frontend_tests() {
    print_status "Running frontend unit tests..."

    if [ ! -d "$FRONTEND_DIR" ]; then
        print_error "Frontend directory not found at: $FRONTEND_DIR"
        return 1
    fi

    # Store current directory
    local original_dir="$(pwd)"

    # Change to frontend directory
    cd "$FRONTEND_DIR"

    # Check if node_modules exists
    if [ ! -d "node_modules" ]; then
        print_status "Installing frontend dependencies..."
        npm install
    fi

    # Run frontend tests
    print_status "Running Angular unit tests..."
    local frontend_success=true
    if npm run test -- --watch=false --browsers=ChromeHeadless; then
        print_success "Frontend unit tests passed"
    else
        print_error "Frontend unit tests failed"
        frontend_success=false
    fi

    # Return to original directory
    cd "$original_dir"

    if [ "$frontend_success" = true ]; then
        return 0
    else
        return 1
    fi
}

# Function to run backend tests
run_backend_tests() {
    print_status "Running backend tests..."

    if [ ! -d "$BACKEND_DIR" ]; then
        print_error "Backend directory not found at: $BACKEND_DIR"
        return 1
    fi

    # Store current directory
    local original_dir="$(pwd)"

    # Change to backend directory
    cd "$BACKEND_DIR"

    # Check if virtual environment exists
    if [ ! -d "venv" ]; then
        print_status "Creating backend virtual environment..."
        python3 -m venv venv
    fi

    # Activate virtual environment
    source venv/bin/activate

    # Check if requirements are installed
    if ! python -c "import django" 2>/dev/null; then
        print_status "Installing backend dependencies..."
        pip install -r requirements.txt
    fi

    # Collect static files for tests
    print_status "Collecting static files..."
    python manage.py collectstatic --noinput > /dev/null 2>&1

    # Run backend tests
    print_status "Running backend tests with pytest..."
    local backend_success=true
    if python -m pytest --tb=short -q; then
        print_success "Backend tests passed"
    else
        print_error "Backend tests failed"
        backend_success=false
    fi

    deactivate

    # Return to original directory
    cd "$original_dir"

    if [ "$backend_success" = true ]; then
        return 0
    else
        return 1
    fi
}

# Function to run dead code detection
run_dead_code_detection() {
    print_status "Running dead code detection..."

    # Track overall success
    local dead_code_success=true

    # Store current directory
    local original_dir="$(pwd)"

    # Run backend dead code detection
    print_status "Checking backend for dead code with Vulture..."
    if [ -d "$BACKEND_DIR" ]; then
        cd "$BACKEND_DIR"

        # Check if virtual environment exists and activate it
        if [ -d "venv" ]; then
            source venv/bin/activate

            # Check if vulture is installed
            if ! python -c "import vulture" 2>/dev/null; then
                print_status "Installing Vulture..."
                pip install vulture
            fi

            # Run vulture
            if vulture --config .vulture-config glossary/; then
                print_success "Backend dead code check passed"
            else
                print_warning "Backend dead code check found issues (see output above)"
                dead_code_success=false
            fi

            deactivate
        else
            print_warning "Backend virtual environment not found, skipping backend dead code check"
            dead_code_success=false
        fi
    else
        print_warning "Backend directory not found, skipping backend dead code check"
        dead_code_success=false
    fi

    # Run frontend dead code detection
    print_status "Checking frontend for dead code with Knip..."
    if [ -d "$FRONTEND_DIR" ]; then
        cd "$FRONTEND_DIR"

        # Check if node_modules exists
        if [ ! -d "node_modules" ]; then
            print_status "Installing frontend dependencies..."
            npm install
        fi

        # Check if knip is installed globally
        if ! command_exists knip; then
            print_status "Installing Knip globally..."
            npm install -g knip
        fi

        # Run knip
        if knip --config knip.json; then
            print_success "Frontend dead code check passed"
        else
            print_warning "Frontend dead code check found issues (see output above)"
            dead_code_success=false
        fi
    else
        print_warning "Frontend directory not found, skipping frontend dead code check"
        dead_code_success=false
    fi

    # Return to original directory
    cd "$original_dir"

    # Report overall result
    if [ "$dead_code_success" = true ]; then
        print_success "Dead code detection completed successfully! ðŸ§¹"
        return 0
    else
        print_warning "Dead code detection found some issues. Check the output above for details."
        return 1
    fi
}

# Function to show help
show_help() {
    echo "Termageddon Test Runner"
    echo ""
    echo "Usage: $0 [options]"
    echo ""
    echo "Options:"
    echo "  -f, --frontend    Run only frontend unit tests"
    echo "  -b, --backend     Run only backend tests"
    echo "  -d, --dead-code   Run only dead code detection"
    echo "  -h, --help        Show this help message"
    echo "  (no args)         Run all tests and dead code detection"
    echo ""
    echo "Examples:"
    echo "  $0                # Run all tests and dead code detection"
    echo "  $0 --frontend     # Run only frontend tests"
    echo "  $0 -b             # Run only backend tests"
    echo "  $0 -d             # Run only dead code detection"
}

# Main function
main() {
    # Setup absolute paths first
    setup_paths

    # Check for required commands
    if ! command_exists node; then
        print_error "Node.js is required but not installed"
        exit 1
    fi

    if ! command_exists python3; then
        print_error "Python 3 is required but not installed"
        exit 1
    fi

    # Parse arguments
    case "${1:-}" in
        -f|--frontend)
            print_status "Running frontend tests only..."
            run_frontend_tests
            ;;
        -b|--backend)
            print_status "Running backend tests only..."
            run_backend_tests
            ;;
        -d|--dead-code)
            print_status "Running dead code detection only..."
            run_dead_code_detection
            ;;
        -h|--help)
            show_help
            exit 0
            ;;
        "")
            print_status "Running all tests and dead code detection..."

            # Track overall success
            local overall_success=true

            # Run backend tests first
            if ! run_backend_tests; then
                print_warning "Backend tests failed, but continuing with frontend tests..."
                overall_success=false
            fi

            # Run frontend tests
            if ! run_frontend_tests; then
                print_warning "Frontend tests failed..."
                overall_success=false
            fi

            # Run dead code detection
            if ! run_dead_code_detection; then
                print_warning "Dead code detection found issues..."
                overall_success=false
            fi

            # Report overall result
            if [ "$overall_success" = true ]; then
                print_success "All tests and dead code detection passed! ðŸŽ‰"
                exit 0
            else
                print_error "Some tests or dead code detection failed. Check the output above for details."
                exit 1
            fi
            ;;
        *)
            print_error "Unknown option: $1"
            show_help
            exit 1
            ;;
    esac
}

# Run main function with all arguments
main "$@"
